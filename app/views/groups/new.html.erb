<h2>
  Create a new group
  <% if @group.filter? %>
    with <%= @group.members_by_filter.count %> members in it
  <% end %>
</h2>

<%= form_for @group do |form| %>
  <%= form.hidden_field :filter, value: params[:filter] %>

  <%= render 'fields', form: form %>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
